head

  meta(charset='UTF-8')

  meta(http-equiv='X-UA-Compatible' content='IE=edge')

  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')

  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Farmer Ones List

.container
  fieldset 
    table.table(style='float: left;')
        thead.thead-dark
            tr
                th(scope='col') NAME
                th(scope='col') WARD
                th(scope='col') UNIQUE No.
                th(scope='col') Reg. dATE
                th(scope='col') GENDER
                th(scope='col') DOB
                th(scope='col') ACTIVITIES
                th(scope='col') NIN
                th(scope='col') PHONE
                th(scope='col') DIRECTIONS
                th(scope='col') RESIDENCE
                th(scope='col') TIME OF STAY
                th(scope='col') STATUS
                th(scope='col') ACTION 

        tbody
        if ones.length
            each one in ones  
              tr          
                  td #{one.name}
                  td #{one.ward}
                  td #{one.uniquenumber}
                  td #{one.registrationdate}
                  td #{one.gender}
                  td #{one.dob}
                  td #{one.activities}
                  td #{one.nin}
                  td #{one.phone}
                  td #{one.directions}
                  td #{one.residence}
                  td #{one.residenceperiod}
                  td #{one.status}
                  td 
                    a.btn.btn-dark.btn-block(href="/studentEdit/"+one.id) Edit     
        else 
            p No records


