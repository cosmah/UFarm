doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Registeration
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.4.1/dist/css/bootstrap.min.css')
  style.
    body {
    background-color: #f9f9f9;
    }
    .container {
    max-width: 500px;
    background-color: #fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
    h2 {
    font-weight: bold;
    margin-bottom: 30px;
    }
    label {
    font-weight: bold;
    }
    input[type="text"],
    input[type="email"],
    input[type="password"] {
    border-radius: 5px;
    box-shadow: none;
    border: none;
    padding: 10px;
    margin-bottom: 20px;
    width: 100%;
    font-size: 16px;
    }
    button[type="submit"] {
    background-color: #007bff;
    border-color: #007bff;
    font-weight: bold;
    font-size: 16px;
    padding: 10px 20px;
    margin-top: 20px;
    }
    button[type="submit"]:hover {
    background-color: #0069d9;
    border-color: #0062cc;
    }
    button[type="submit"]:active {
    background-color: #0062cc;
    border-color: #005cbf;
    }

.container.mt-5
  form#registration-form(name='registration' action='/clientAuth' method='post' onsubmit='return validateForm()')
    h2.mb-4 Please Register Here
    .mb-3
      label.form-label(for='username') Username
      input#username.form-control(type='text' name='username' required='')
    .mb-3
      label.form-label(for='email') Email
      input#email.form-control(type='email' name='email' required='')
    .mb-3
      label.form-label(for='password') Password
      input#password.form-control(type='password' name='password' required='')
    .mb-3
      label.form-label(for='confirmpassword') Confirm Password
      input#confirmpassword.form-control(type='password' name='confirmpassword' required='')
    button.btn.btn-primary(type='submit') Register
script(src='scripts.js')
script.
  function validateForm() {
  var username = document.forms["registration"]["username"].value;
  var email = document.forms["registration"]["email"].value;
  var password = document.forms["registration"]["password"].value;
  var confirmPassword = document.forms["registration"]["confirmpassword"].value;
  if (username == "" || email == "" || password == "" || confirmPassword == "") {
  alert("Please fill in all fields");
  return false;
  }
  if (password != confirmPassword) {
  alert("Passwords do not match");
  return false;
  }
  return true;
  }
