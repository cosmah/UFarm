doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Edit
.container
  form#contact_form.well.form-horizontal(name='onesEdit' action='/onesEdit?id='+one._id method='post')
    fieldset
      // Form Name
      legend
        center
          h2
            b Edit Farmer One
        .form-group
      label(for='name') Name:
      input.form-control(name='name' type='text' value=one.name)
    .form-group
      label(for='ward') Ward:
      input#ward.form-control(type='text' value=one.ward  name='ward')
    .form-group
      label(for='uniquenumber') FO Unique Number:
      input#unique-number.form-control(type='text' value=one.uniquenumber name='uniquenumber')
    .form-group
      label(for='registrationdate') Registration Date:
      input#registration-date.form-control(type='date' name='registrationdate' value=one.registrationdate)
    .form-group
      label(for='gender') Gender:
      input#gender.form-control(type='text' name='gender' value=one.gender)

    .form-group
      label(for='dob') Date of Birth:
      input#dob.form-control(type='date' name='dob' value=one.dob)
    .form-group
      label(for='activities') Activities Engaged In:
      input#activities.form-control(type='text' value=one.activities name='activities')
    .form-group
      label(for='nin') National Identification Number:
      input#national-id.form-control(type='text' value=one.nin name='nin')
    .form-group
      label(for='phone') Phone Number:
      input#phone.form-control(type='text' value=one.phone name='phone')
    .form-group
      label(for='directions') Directions to Home:
      input#directions.form-control(type='text' value=one.directions name='directions')
    .form-group
      label(for='residence') Residence Type:
      select#residence.form-control(name='residence')
        option(value='Owned') Owned
        option(value='Rented') Rented
        option(value='Other') Other
    .form-group
      label(for='residenceperiod') Residence period in years:
      input#residence-period(type='number' name='residenceperiod' value=one.residenceperiod)
    .form-group
      label(for='status') Farmer One Status
      select#status.form-control(name='status')
        option(value='active') Active
        option(value='inactive') Inactive
    br
    button.btn.btn-warning(type='submit') UPDATE
           

