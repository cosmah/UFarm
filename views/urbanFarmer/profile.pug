doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title User Profile Page
  // Bootstrap CSS
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' integrity='sha384-EzKKlN0ef+wyNk4s4s0s4s0s4s0s4s0s4s0s0s4s0s4s0s4s4s4s4s4s4s4s4' crossorigin='anonymous')
  // Custom CSS
  link(rel='stylesheet' href='style.css')
header
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container-fluid
      a.navbar-brand(href='#') User Profile
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse.justify-content-end
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='#') Edit Profile
          li.nav-item
            a.nav-link(href='#') Log Out
main.container
  section.row
    .col-md-3
      .card
        .card-header
          h5.card-title Profile
        .card-body.text-center
          img.img-fluid.rounded-circle.mb-3(src='https://via.placeholder.com/150' alt='Profile Picture')
          h4.card-title John Doe
          p.card-text Web Developer
          ul.list-group.list-group-flush
            li.list-group-item
              i.bi.bi-envelope
              |  john.doe@example.com
            li.list-group-item
              i.bi.bi-geo-alt
              |  London, UK
            li.list-group-item
              i.bi.bi-telephone
              |  +44 1234567890
            li.list-group-item
              i.bi.bi-globe
              |  www.johndoe.com
