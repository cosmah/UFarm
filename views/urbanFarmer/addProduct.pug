doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Product Upload Form
  // Bootstrap CSS
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css')
  // Custom CSS
  style.
    /* Add padding to top and bottom of the page */
    body > .container {
    padding-top: 50px;
    padding-bottom: 50px;
    }
    /* Style the form labels */
    label {
    font-weight: bold;
    }
    /* Style the form inputs */
    input[type="text"],
    input[type="number"],
    select,
    textarea {
    background-color: #f8f9fa;
    border: none;
    border-radius: 10px;
    padding: 12px 20px;
    margin-bottom: 20px;
    font-size: 16px;
    font-weight: 500;
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
    transition: all 0.3s ease-in-out;
    }
    /* Style the form inputs on focus */
    input[type="text"]:focus,
    input[type="number"]:focus,
    select:focus,
    textarea:focus {
    background-color: #fff;
    box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.16);
    outline: none;
    }
    /* Style the form button */
    button[type="submit"] {
    background-color: #007bff;
    border: none;
    border-radius: 10px;
    padding: 12px 20px;
    color: #fff;
    font-size: 16px;
    font-weight: 500;
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
    transition: all 0.3s ease-in-out;
    }
    /* Style the form button on hover */
    button[type="submit"]:hover {
    background-color: #0062cc;
    }
    /* Style the form title */
    h1 {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 30px;
    }
    /* Style the form group containers */
    .form-group {
    margin-bottom: 30px;
    }
    .container{
    /*background-color: #e2f8fa;*/
    }
    .abort-button {
    position: absolute;
    top: 10px;
    right: 10px;
    padding: 10px;
    }
button.abort-button(onclick="window.location.href = 'ufDash';") Back 
.container
  center
    h1.text-center.mb-4 Product Upload Form
    form#farmers(name='registration' action='/urbanFarmer/addProduct' method='post')
      .row
        //- .col-md-6
        //-   .form-group
        //-     label(for='products') Product Images (minimum of 3)
        //-     input#products.form-control(type='file' name='products[]' accept='image/*' multiple='' required='')
        //-     small.form-text.text-muted Maximum file size: 5MB per image
        .col-md-6
          .form-group
            label(for='username') Unique No.
            input#pname.form-control(type='text' placeholder='Enter unique number' name='username' required='')
        .col-md-6
          .form-group
            label(for='pname') Product Name
            input#pname.form-control(type='text' placeholder='Enter product name' name='pname' required='')
        .col-md-6
          .form-group
            label(for='ward') Ward Name
            input#ward.form-control(type='text' placeholder='Enter ward name' name='ward' required='')
      .row
        .col-md-6
          .form-group
            label(for='date') Date of Adding
            input#date.form-control(type='date' name='date' required='')
        .col-md-6
          .form-group
            label(for='expiry') Best Before
            input#expiry.form-control(type='date' name='expiry' required='')
        .col-md-6
          .form-group
            label(for='price') Unit Price (in Ugx)
            input#price.form-control(type='number' placeholder='Enter unit price' name='price' required='')
      .row
        .col-md-6
          .form-group
            label(for='quantity') Quantity
            input#quantity.form-control(type='number' placeholder='Enter quantity' name='quantity' required='')
        .col-md-6
          .form-group
            label(for='payment') Mode of Payment
            select#payment.form-control(type='text' name='payment' required='')
              option(value='') Select mode of payment
              option(value='Cash') Cash
              option(value='Mobile Money') Mobile Money
              option(value='Bank Transfer') Bank Transfer
              option(value='Other') Other
      .row
        .col-md-6
          .form-group
            label(for='directions') Directions
            input#produce-type.form-control(type='text' placeholder='Enter directions' name='directions' required='')
        .col-md-6
          .form-group
            label(for='delivery') Mode of Delivery
            select#delivery.form-control(type='text' name='delivery' required='')
              option(value='') Select mode of delivery
              option(value='Pickup') Pickup
              option(value='Delivery') Delivery
        .col-md-6
          .form-group
            label(for='type') Produce Type
            select#type.form-control(type='text' name='type' required='')
              option(value='') Select Produce Type
              option(value='Fresh Horticulture produce') Fresh Horticulture produce
              option(value='Poultry products') Poultry products
              option(value='Dairy products') Dairy products
          button.btn.btn-primary(type='submit') Submit
