doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Product Upload Form
  // Bootstrap CSS
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css')
  // Custom CSS
  style.
    /* Add padding to top and bottom of the page */
    body > .container {
    padding-top: 50px;
    padding-bottom: 50px;
    }
    /* Style the form labels */
    label {
    font-weight: bold;
    }
    /* Style the form inputs */
    input[type="text"],
    input[type="number"],
    select,
    textarea {
    background-color: #f8f9fa;
    border: none;
    border-radius: 10px;
    padding: 12px 20px;
    margin-bottom: 20px;
    font-size: 16px;
    font-weight: 500;
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
    transition: all 0.3s ease-in-out;
    }
    /* Style the form inputs on focus */
    input[type="text"]:focus,
    input[type="number"]:focus,
    select:focus,
    textarea:focus {
    background-color: #fff;
    box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.16);
    outline: none;
    }
    /* Style the form button */
    button[type="submit"] {
    background-color: #007bff;
    border: none;
    border-radius: 10px;
    padding: 12px 20px;
    color: #fff;
    font-size: 16px;
    font-weight: 500;
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
    transition: all 0.3s ease-in-out;
    }
    /* Style the form button on hover */
    button[type="submit"]:hover {
    background-color: #0062cc;
    }
    /* Style the form title */
    h1 {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 30px;
    }
    /* Style the form group containers */
    .form-group {
    margin-bottom: 30px;
    }
    .container{
    /*background-color: #e2f8fa;*/
    }
    .abort-button {
    position: absolute;
    top: 10px;
    right: 10px;
    padding: 10px;
    }
