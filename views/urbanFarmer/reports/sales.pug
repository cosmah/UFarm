doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Order Details
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
  style.
    /* Global Styles */
    body {
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;
    }
    .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
    h1 {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
    }
    table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
    }
    th, td {
    text-align: center;
    padding: 10px;
    border: 1px solid #ddd;
    }
    th {
    background-color: #f5f5f5;
    font-size: 18px;
    font-weight: bold;
    }
    /* Responsive Styles */
    @media screen and (max-width: 768px) {
    .container {
    padding: 10px;
    }
    h1 {
    font-size: 24px;
    }
    table {
    font-size: 14px;
    }
    }
    @media screen and (max-width: 480px) {
    th, td {
    padding: 5px;
    }
    th {
    font-size: 16px;
    }
    table {
    font-size: 12px;
    }
    }
    .abort-button {
    position: absolute;
    top: 10px;
    right: 10px;
    padding: 10px;
    }
button.abort-button(onclick="window.location.href = '../ufDash';") Back 
.container
  h1 Order Details
  .row
    .col-md-6
      .form-group
        label(for='product-name') Product Name
        input#product-name.form-control(type='text' readonly='')
      .form-group
        label(for='order-date') Order Date
        input#order-date.form-control(type='text' readonly='')
      .form-group
        label(for='order-quantity') Order Quantity
        input#order-quantity.form-control(type='text' readonly='')
    .col-md-6
      .form-group
        label(for='client-name') Client Name
        input#client-name.form-control(type='text' readonly='')
      .form-group
        label(for='client-email') Client Email
        input#client-email.form-control(type='email' readonly='')
      .form-group
        label(for='client-phone') Client Phone
        input#client-phone.form-control(type='text' readonly='')
  .form-group
    label(for='order-notes') Order Notes
    textarea#order-notes.form-control(rows='3' readonly='')
  button.btn.btn-primary(onclick="window.location.href = 'orders';") Back to Orders
